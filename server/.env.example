# Node Environment
NODE_ENV=production
PORT=5000

# Database
DBURL=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# JWT Configuration
TOKEN_SECRET=your_jwt_secret_key_here
TOKEN_EXPIRE=24h

# CORS Origins
CORS_ORIGIN=https://yourdomain.com
ADMIN_CORS_ORIGIN=https://admin.yourdomain.com
APP_CORS_ORIGIN=https://app.yourdomain.com
ROOM_CORS_ORIGIN=https://room.yourdomain.com

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://api.yourdomain.com/api/auth/google

# Facebook OAuth
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_REDIRECT_URI=https://api.yourdomain.com/api/auth/facebook

# Application URLs
FRONTEND_URL=https://yourdomain.com
APP_FRONTEND_URL=https://app.yourdomain.com
BACKEND_URL=https://api.yourdomain.com
ROOM_URL=https://room.yourdomain.com

# Admin Configuration
ADMIN_ID=0
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=your_admin_password
ADMIN_TOKEN_SECRET=your_admin_token_secret

# Email Configuration
EMAIL_ADDRESS=noreply@yourdomain.com
EMAIL_PASSWORD=your_email_password
EMAIL_HOST=smtp.your-email-provider.com

# SSLCommerz Payment Gateway (PRODUCTION)
# IMPORTANT: Set SSLCOMMERZ_IS_LIVE to 'true' for production, 'false' for sandbox
SSLCOMMERZ_STORE_ID=your_production_store_id
SSLCOMMERZ_API_KEY=your_production_api_key
SSLCOMMERZ_IS_LIVE=true

# OpenCage Geocoding API
OPENCAGE_API_KEY=your_opencage_api_key

# Steadfast Courier API
STEADFAST_API_URL=https://portal.packzy.com/api/v1
STEADFAST_API_KEY=your_steadfast_api_key
STEADFAST_SECRET_KEY=your_steadfast_secret_key

# Twilio Video API
TWILIO_VIDEO_SID=your_twilio_video_sid
TWILIO_VIDEO_SECRET_KEY=your_twilio_video_secret_key
TWILIO_ACCOUNT_SID=your_twilio_account_sid
